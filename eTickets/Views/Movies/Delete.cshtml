@using eTickets.Data.Enums
@model Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<style>
    :root {
        --red: #e60000;
        --bg: #080808;
        --surface: #111111;
        --border: #333;
        --text: #d4d4d4;
    }

    body {
        background: var(--bg);
        color: var(--text);
    }

    .delete-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 18px;
        padding: 40px;
        margin-top: 50px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .image-preview-container {
        width: 100%;
        height: 350px;
        border: 1px solid #444;
        border-radius: 12px;
        overflow: hidden;
        background: #000;
    }

        .image-preview-container img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    .form-control, .form-select {
        background: #1a1a1a !important;
        border: 1px solid #333;
        color: #aaa !important;
        border-radius: 8px;
    }

    .btn-delete {
        background: var(--red);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-delete:hover {
            background: #ff1a1a;
            transform: scale(1.05);
            color: white;
        }

    label {
        color: #666;
        margin-bottom: 5px;
        font-size: 0.9rem;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="delete-card">
                <h2 class="text-white mb-2">Delete Movie</h2>
                <p class="text-danger mb-4">Are you sure you want to delete this movie? This action cannot be undone.</p>

                <div class="row">
                    @* Left Side: Image Display *@
                    <div class="col-md-4">
                        <label>Movie Poster</label>
                        <div class="image-preview-container">
                            <img src="@Model.ImageURL" alt="@Model.Name" />
                        </div>
                    </div>

                    @* Right Side: Movie Details (Read Only) *@
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price"></label>
                                <input asp-for="Price" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="StartDate"></label>
                                <input asp-for="StartDate" type="text" value="@Model.StartDate.ToString("dd MMM yy")" class="form-control" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="EndDate"></label>
                                <input asp-for="EndDate" type="text" value="@Model.EndDate.ToString("dd MMM yy")" class="form-control" readonly />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="MovieCategory"></label>
                                <input asp-for="MovieCategory" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Cinema</label>
                                <input value="@Model.Cinema.Name" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Producer</label>
                                <input value="@Model.Producer.FullName" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
                        </div>

                        @* Form for Submission *@
                        <form asp-controller="Movies" asp-action="DeleteConfirmed" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex gap-3 mt-4">
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                                <button type="submit" class="btn-delete">Confirm Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>