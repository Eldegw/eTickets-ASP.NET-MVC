@{
    ViewData["Title"] = "404 - Page Not Found";
}

<style>
    .notfound-container {
        height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .error-code {
        font-size: 10rem;
        font-weight: 900;
        color: #1f2833;
        text-shadow: 2px 2px 0px #66fcf1, 5px 5px 0px rgba(102, 252, 241, 0.2);
        line-height: 1;
        margin-bottom: 20px;
    }

    .error-message {
        font-size: 1.5rem;
        color: #45a29e;
        margin-bottom: 30px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .btn-home {
        background: #66fcf1;
        color: #0b0c10;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 50px;
        text-decoration: none;
        transition: 0.3s;
        border: 2px solid #66fcf1;
    }

        .btn-home:hover {
            background: transparent;
            color: #66fcf1;
            box-shadow: 0 0 15px rgba(102, 252, 241, 0.4);
        }

    .ghost-icon {
        font-size: 5rem;
        color: #66fcf1;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }
    }
</style>

<div class="container notfound-container">
    <div>
        <div class="ghost-icon">
            <i class="bi bi-ghost"></i>
        </div>
        <h1 class="error-code">404</h1>
        <p class="error-message">Oops! The page you're looking for vanished.</p>
        <p class="text-muted mb-5">It might have been moved, deleted, or perhaps it never existed.</p>

        <a asp-controller="Movies" asp-action="Index" class="btn btn-home">
            <i class="bi bi-house-door-fill me-2"></i> Back to Homepage
        </a>
    </div>
</div>