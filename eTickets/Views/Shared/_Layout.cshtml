<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* --- تنسيقات الإصدار الأحمر (Inferno Red Layout) --- */
        body {
            background-color: #050505; /* خلفية الصفحة كاملة سوداء لتناسب الكروت */
            color: #ffffff;
        }

        .premium-nav {
            background: rgba(10, 10, 10, 0.98) !important;
            backdrop-filter: blur(15px);
            border-bottom: 2px solid #ff0000; /* خط أحمر متوهج */
            padding: 12px 0;
            z-index: 2000 !important;
            box-shadow: 0 4px 20px rgba(255, 0, 0, 0.15);
        }

            .premium-nav .navbar-brand {
                color: #ff0000 !important; /* شعار أحمر */
                font-size: 1.6rem;
                font-weight: 800;
                letter-spacing: 1.5px;
                text-transform: uppercase;
                text-shadow: 0 0 10px rgba(255, 0, 0, 0.5);
            }

            .premium-nav .nav-link {
                color: #e0e0e0 !important;
                font-weight: 500;
                transition: 0.3s ease;
                text-transform: uppercase;
                font-size: 0.9rem;
            }

                .premium-nav .nav-link:hover {
                    color: #ff3131 !important; /* أحمر نيون عند الهوفر */
                }

            /* تنسيق الـ Dropdown الأحمر */
            .premium-nav .dropdown-menu {
                background-color: #0a0a0a !important;
                border: 1px solid #ff0000 !important;
                border-radius: 12px;
                box-shadow: 0 10px 40px rgba(0,0,0,0.8);
                padding: 10px;
            }

            .premium-nav .dropdown-item {
                color: #ffffff !important;
                border-radius: 8px;
                padding: 10px 15px;
                transition: 0.3s;
            }

                .premium-nav .dropdown-item:hover {
                    background-color: rgba(255, 0, 0, 0.2) !important;
                    color: #ff3131 !important;
                }

            /* تنسيق البحث المائل للأحمر */
            .premium-nav .search-input {
                background: rgba(255, 255, 255, 0.05) !important;
                border: 1px solid #444 !important;
                color: white !important;
                border-radius: 20px 0 0 20px !important;
                transition: 0.3s;
            }

                .premium-nav .search-input:focus {
                    border-color: #ff0000 !important;
                    box-shadow: 0 0 8px rgba(255, 0, 0, 0.3);
                    background: rgba(255, 255, 255, 0.1) !important;
                }

            .premium-nav .search-btn {
                border-radius: 0 20px 20px 0 !important;
                border: 1px solid #444 !important;
                border-left: none !important;
                color: #ff0000 !important;
                background: rgba(255, 255, 255, 0.05) !important;
                transition: 0.3s;
            }

                .premium-nav .search-btn:hover {
                    background: #ff0000 !important;
                    color: white !important;
                }

            /* زر الحساب */
            .premium-nav .account-btn {
                border: 1px solid #ff0000 !important;
                color: #ff0000 !important;
                border-radius: 50px !important;
                background: rgba(255, 0, 0, 0.05);
                transition: 0.3s;
            }

                .premium-nav .account-btn:hover {
                    background: #ff0000 !important;
                    color: white !important;
                    box-shadow: 0 0 15px rgba(255, 0, 0, 0.4);
                }

        /* الفوتر الأحمر المظلم */
        .footer-red {
            background: #0a0a0a !important;
            border-top: 1px solid #ff0000 !important;
            color: #888 !important;
            padding: 25px 0;
        }

        .text-red-glow {
            color: #ff0000;
            font-weight: bold;
            text-shadow: 0 0 5px rgba(255, 0, 0, 0.3);
        }

        header {
            overflow: visible !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark premium-nav sticky-top">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold" asp-controller="Movies" asp-action="Index">
                    <i class="bi bi-ticket-perforated-fill me-2"></i>eTickets
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between" id="navbarMain">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-controller="Movies" asp-action="Index">
                                <i class="bi bi-film me-1"></i> Movies
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-3" href="#" id="mgmtDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear-fill me-1"></i> Management
                            </a>
                            <ul class="dropdown-menu shadow-lg" aria-labelledby="mgmtDrop">
                                <li><a class="dropdown-item" asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels me-2"></i> Cinemas</a></li>
                                <li><a class="dropdown-item" asp-controller="Producers" asp-action="Index"><i class="bi bi-headset me-2"></i> Producers</a></li>
                                <li><a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-badge me-2"></i> Actors</a></li>
                            </ul>
                        </li>
                    </ul>

                    @* البحث المطور *@
                    <form class="d-flex mx-lg-4 my-2 my-lg-0" asp-controller="Movies" asp-action="Filter" style="max-width: 400px; flex-grow: 0.5;">
                        <input name="searchString" type="text" class="form-control search-input" placeholder="Search movies...">
                        <button class="btn search-btn" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle account-btn px-4" href="#" id="userDrop" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-list-ul me-2"></i> My Orders</a></li>
                                <li><hr class="dropdown-divider" style="background-color: rgba(255,255,255,0.1);"></li>
                                <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mt-4 px-lg-5">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-red text-center">
        <div class="container">
            &copy; 2026 - <span class="text-red-glow">eTickets</span> Premium Cinema Experience
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>