@model Actor

@{
    ViewData["Title"] = "Actor Profile";
}

<style>
    /* تحسينات عامة للجسم */
    body {
        background-color: #0b0c10;
        color: #ffffff;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
    }

    /* هيدر سينمائي كخلفية ضبابية */
    .hero-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('@Model.ProfilePictureURL') center/cover;
        filter: blur(80px) brightness(0.3);
        z-index: -1;
    }

    /* الحاوية الرئيسية */
    .actor-container {
        margin-top: 80px;
        margin-bottom: 50px;
    }

    /* كارت البروفايل الزجاجي */
    .actor-glass-card {
        background: rgba(31, 40, 51, 0.4);
        backdrop-filter: blur(25px);
        border-radius: 40px;
        border: 1px solid rgba(102, 252, 241, 0.15);
        padding: 50px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
    }

    /* إطار الصورة المطور */
    .img-frame {
        position: relative;
        display: inline-block;
        padding: 10px;
        background: linear-gradient(135deg, #66fcf1, transparent);
        border-radius: 35px;
    }

    .profile-img {
        width: 100%;
        max-width: 380px;
        border-radius: 30px;
        object-fit: cover;
        box-shadow: 0 15px 35px rgba(0,0,0,0.4);
    }

    /* نصوص العناوين */
    .actor-name {
        font-size: 3.5rem;
        font-weight: 800;
        background: linear-gradient(to right, #66fcf1, #45a29e);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 10px;
    }

    .bio-title {
        color: #66fcf1;
        letter-spacing: 2px;
        text-transform: uppercase;
        font-size: 0.9rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .bio-text {
        font-size: 1.1rem;
        line-height: 1.8;
        opacity: 0.85;
        text-align: justify;
    }

    /* أزرار الأكشن */
    .btn-action {
        padding: 12px 35px;
        border-radius: 50px;
        font-weight: 700;
        transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-edit-neon {
        background: #66fcf1;
        color: #0b0c10;
        border: none;
    }

        .btn-edit-neon:hover {
            background: #45a29e;
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(102, 252, 241, 0.3);
        }

    .btn-back-outline {
        border: 2px solid rgba(255,255,255,0.2);
        color: white;
    }

        .btn-back-outline:hover {
            border-color: #66fcf1;
            color: #66fcf1;
            background: rgba(102, 252, 241, 0.05);
        }

    /* قسم الإحصائيات البسيط */
    .actor-stat {
        border-left: 3px solid #66fcf1;
        padding-left: 20px;
        margin-top: 30px;
    }
</style>

<div class="hero-bg"></div>

<div class="container actor-container">
    <div class="actor-glass-card">
        <div class="row align-items-center">

            <div class="col-lg-5 text-center mb-5 mb-lg-0">
                <div class="img-frame">
                    <img src="@Model.ProfilePictureURL" class="profile-img" alt="@Model.FullName">
                </div>
            </div>

            <div class="col-lg-7 ps-lg-5">
                <h1 class="actor-name">@Model.FullName</h1>
                <p class="text-white-50 mb-4 fw-bold"><i class="bi bi-star-fill text-warning me-2"></i> PROFESSIONAL ACTOR</p>

                <div class="actor-stat">
                    <div class="bio-title">Biography</div>
                    <p class="bio-text">@Model.Bio</p>
                </div>

                <div class="mt-5 d-flex flex-wrap gap-3">
                    <a class="btn btn-action btn-edit-neon shadow" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="bi bi-pencil-square me-2"></i> Edit Profile
                    </a>
                    <a class="btn btn-action btn-back-outline" asp-action="Index">
                        <i class="bi bi-arrow-left me-2"></i> Back to Gallery
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

