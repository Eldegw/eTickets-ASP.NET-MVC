@model Producer

@{
    ViewData["Title"] = "Edit Actor";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    /* خلفية سوداء مطابقة لـ Index */
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Segoe UI', sans-serif;
    }

    /* كارت غامق بحدود رفيعة جداً */
    .glass-card {
        background: #1c1c1c;
        border: 1px solid #333;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        padding: 3rem;
    }

    /* العناوين باللون الأحمر والأبيض */
    .display-header {
        font-weight: 800;
        color: #ffffff;
    }

    .text-red-highlight {
        color: #e50914;
    }

    /* تحسين خانات الإدخال */
    .form-control {
        background: #2b2b2b;
        border: 1px solid #444;
        color: #fff !important;
        border-radius: 8px;
        padding: 12px;
    }

        .form-control:focus {
            background: #333;
            border-color: #e50914;
            box-shadow: 0 0 0 2px rgba(229, 9, 20, 0.2);
            outline: none;
        }

    /* زر التحديث البرتقالي/الأصفر أو الأحمر المعتمد */
    .btn-netflix-edit {
        background-color: #e50914;
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 5px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-netflix-edit:hover {
            background-color: #b20710;
            color: white;
            transform: translateY(-2px);
        }

    /* معاينة الصورة بشكل دائري */
    .img-preview-container {
        border: 3px solid #e50914;
        padding: 5px;
        border-radius: 50%;
        display: inline-block;
    }

    .text-muted {
        color: #aaa !important;
    }
</style>
SaveEdit
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="glass-card">

                <div class="mb-5">
                    <h2 class="display-header text-center">Update <span class="text-red-highlight">Producer Details</span></h2>
                    <p class="text-muted text-center">Modifying information for: <strong>@Model.FullName</strong></p>
                </div>

                @* تأكد من أن asp-action هو التابع المسؤول عن حفظ التعديل في Controller *@
                <form asp-controller="Producers" asp-action="SaveEdit" method="post" class="row g-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                    @* لا تنسى الـ Hidden ID لضمان تحديث السجل الصحيح *@
                    <input type="hidden" asp-for="Id" />

                    <div class="col-md-4 text-center border-end border-secondary border-opacity-25">
                        <div class="img-preview-container mb-3 shadow-lg">
                            @* عرض الصورة الحالية للممثل عند التحميل *@
                            <img id="PicPreview" src="@(string.IsNullOrEmpty(Model.ProfilePictureURL) ? "https://via.placeholder.com/180?text=No+Photo" : Model.ProfilePictureURL)"
                                 class="rounded-circle"
                                 style="width: 180px; height: 180px; object-fit: cover;" />
                        </div>
                        <div>
                            <span class="badge bg-dark border border-secondary text-light px-3 py-2">
                                <i class="bi bi-pencil-square me-1"></i> Image Preview
                            </span>
                        </div>
                    </div>

                    <div class="col-md-8 ps-md-5">
                        <div class="mb-4">
                            <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                            <input asp-for="FullName" class="form-control" placeholder="Update name..." />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ProfilePictureURL" class="form-label fw-bold">Profile Picture URL</label>
                            <input asp-for="ProfilePictureURL" id="PicInput" class="form-control" placeholder="Update image link..." />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Bio" class="form-label fw-bold">Biography</label>
                            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Update biography..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger small"></span>
                        </div>

                        <div class="d-flex align-items-center justify-content-between pt-3">
                            <a asp-action="Index" class="text-muted text-decoration-none small">
                                <i class="bi bi-arrow-left"></i> Discard Changes
                            </a>
                            <button type="submit" class="btn btn-netflix-edit">
                                <i class="bi bi-check2-circle me-2"></i> Save Changes
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تحديث الصورة لحظياً عند تغيير الرابط
            $("#PicInput").on("input", function () {
                var url = $(this).val();
                $("#PicPreview").attr("src", url || "https://via.placeholder.com/180?text=No+Image");
            });

            // التعامل مع الروابط التالفة
            $("#PicPreview").on("error", function() {
                $(this).attr("src", "https://via.placeholder.com/180?text=Invalid+Link");
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}