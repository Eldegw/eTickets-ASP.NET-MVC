@model Producer

@{
    ViewData["Title"] = "Delete Producer";
}

<style>
    /* خلفية متدرجة عميقة وراقية */
    body {
        background: radial-gradient(circle at top right, #1e293b, #0f172a);
        background-attachment: fixed;
        min-height: 100vh;
        color: #f1f5f9;
        font-family: 'Segoe UI', sans-serif;
    }

    /* الكارت الزجاجي بتنبيه أحمر خفيف في الحدود */
    .glass-card-delete {
        background: rgba(30, 41, 59, 0.7);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(244, 63, 94, 0.2);
        border-radius: 28px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        padding: 4rem;
        margin-top: 2rem;
    }

    /* تأثير الصورة */
    .img-delete-container {
        padding: 8px;
        background: linear-gradient(135deg, rgba(244, 63, 94, 0.4), rgba(225, 29, 72, 0.1));
        border-radius: 50%;
        display: inline-block;
        transition: transform 0.3s ease;
    }

        .img-delete-container:hover {
            transform: rotate(3deg) scale(1.02);
        }

    #ProducerImg {
        border: 4px solid #0f172a;
    }

    /* أزرار الأكشن */
    .btn-danger-gradient {
        background: linear-gradient(135deg, #e11d48 0%, #fb7185 100%);
        border: none;
        color: white;
        padding: 14px 35px;
        border-radius: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 10px 15px -3px rgba(225, 29, 72, 0.3);
    }

        .btn-danger-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 20px 25px -5px rgba(225, 29, 72, 0.4);
            filter: brightness(1.1);
            color: white;
        }

    .btn-cancel {
        color: #94a3b8;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            color: #f1f5f9;
        }

    /* تفاصيل البيانات */
    .info-label {
        color: #64748b;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        font-weight: 800;
    }

    .info-value {
        color: #f8fafc;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        border-left: 3px solid #fb7185;
        padding-left: 15px;
    }

    .warning-box {
        background: rgba(251, 113, 133, 0.1);
        border: 1px dashed rgba(251, 113, 133, 0.3);
        padding: 15px;
        border-radius: 12px;
        color: #fb7185;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="glass-card-delete">

                <div class="text-center mb-5">
                    <h2 class="fw-bold text-white mb-2">Confirm Deletion</h2>
                    <div class="warning-box d-inline-block">
                        <i class="bi bi-exclamation-octagon-fill me-2"></i>
                        Attention: You are about to permanently remove this producer.
                    </div>
                </div>

                <div class="row g-5 align-items-center">
                    <div class="col-md-5 text-center">
                        <div class="img-delete-container shadow-lg">
                            <img src="@Model.ProfilePictureURL"
                                 alt="@Model.FullName"
                                 id="ProducerImg"
                                 class="rounded-circle"
                                 style="width: 240px; height: 240px; object-fit: cover;" />
                        </div>
                    </div>

                    <div class="col-md-7">
                        <div class="details-content">
                            <div class="mb-4">
                                <p class="info-label mb-1">Full Name</p>
                                <p class="info-value">@Model.FullName</p>
                            </div>

                            <div class="mb-4">
                                <p class="info-label mb-1">Biography</p>
                                <p class="text-muted" style="font-size: 0.95rem; line-height: 1.8; max-height: 150px; overflow-y: auto;">
                                    @Model.Bio
                                </p>
                            </div>
                        </div>

                        <form asp-controller="Producers" asp-action="DeleteConfirmed" method="post" class="mt-5">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="d-flex align-items-center justify-content-between pt-4 border-top border-secondary border-opacity-25">
                                <a asp-action="Index" class="btn-cancel">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </a>

                                <button type="submit" class="btn btn-danger-gradient shadow">
                                    <i class="bi bi-trash3-fill me-2"></i> Delete Permanently
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // التعامل مع روابط الصور المكسورة
        document.getElementById('ProducerImg').onerror = function() {
            this.src = 'https://via.placeholder.com/240?text=No+Image+Found';
        };
    </script>
}