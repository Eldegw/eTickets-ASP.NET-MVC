@model Producer

@{
    ViewData["Title"] = "Producer Details";
}

<style>
    /* خلفية متدرجة */
    body {
        background: radial-gradient(circle at top right, #1e293b, #0f172a);
        min-height: 100vh;
        color: #f1f5f9;
        font-family: 'Segoe UI', sans-serif;
    }

    /* كارت زجاجي بحدود زرقاء فاتحة */
    .glass-card-details {
        background: rgba(30, 41, 59, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(56, 189, 248, 0.2);
        border-radius: 32px;
        padding: 4rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    }

    /* صورة البروفايل بإطار متوهج */
    .profile-img-container {
        padding: 6px;
        background: linear-gradient(135deg, #38bdf8, #6366f1);
        border-radius: 50%;
        display: inline-block;
        box-shadow: 0 10px 30px rgba(56, 189, 248, 0.3);
    }

    #ProfileImg {
        border: 4px solid #0f172a;
        width: 250px;
        height: 250px;
        object-fit: cover;
    }

    /* تنسيق النصوص */
    .detail-label {
        color: #94a3b8;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .detail-value {
        color: #f8fafc;
        font-size: 1.4rem;
        font-weight: 500;
        margin-bottom: 2rem;
    }

    /* أزرار التحكم */
    .btn-action {
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-edit {
        background: rgba(56, 189, 248, 0.1);
        border: 1px solid #38bdf8;
        color: #38bdf8;
    }

        .btn-edit:hover {
            background: #38bdf8;
            color: #0f172a;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="glass-card-details">

                <div class="row align-items-center">
                    <div class="col-md-5 text-center">
                        <div class="profile-img-container mb-4">
                            <img src="@Model.ProfilePictureURL"
                                 alt="@Model.FullName"
                                 id="ProfileImg"
                                 class="rounded-circle" />
                        </div>
                        <h3 class="fw-bold mt-3">@Model.FullName</h3>
                        <span class="badge bg-primary bg-opacity-25 text-primary">Movie Producer</span>
                    </div>

                    <div class="col-md-7 ps-md-5">
                        <div class="detail-label">Full Name</div>
                        <div class="detail-value">@Model.FullName</div>

                        <div class="detail-label">Biography</div>
                        <div class="detail-value text-muted" style="font-size: 1rem; line-height: 1.8;">
                            @(!string.IsNullOrEmpty(Model.Bio) ? Model.Bio : "No biography available for this producer.")
                        </div>

                        <div class="d-flex gap-3 pt-4 border-top border-secondary border-opacity-25 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-action btn-edit">
                                <i class="bi bi-pencil-square me-2"></i> Edit Details
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('ProfileImg').onerror = function() {
            this.src = 'https://via.placeholder.com/250?text=No+Image';
        };
    </script>
}