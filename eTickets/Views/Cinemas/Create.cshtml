@model Cinema

@{
    ViewData["Title"] = "Add New Cinema";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    /* 1. الخلفية السينمائية */
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Segoe UI', sans-serif;
    }

    /* 2. الكارت الزجاجي الغامق */
    .glass-card {
        background: #1c1c1c;
        border: 1px solid #333;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        padding: 3rem;
    }

    /* 3. العناوين */
    .display-header {
        font-weight: 800;
        color: #ffffff;
    }

    .text-red-highlight {
        color: #e50914; /* أحمر نيتفلكس */
    }

    /* 4. خانات الإدخال */
    .form-control {
        background: #2b2b2b;
        border: 1px solid #444;
        color: #fff !important;
        border-radius: 8px;
        padding: 12px;
    }

        .form-control:focus {
            background: #333;
            border-color: #e50914;
            box-shadow: 0 0 0 2px rgba(229, 9, 20, 0.2);
            outline: none;
        }

    /* 5. زر الإضافة */
    .btn-netflix {
        background-color: #e50914;
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 5px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-netflix:hover {
            background-color: #b20710;
            color: white;
            transform: translateY(-2px);
        }

    /* 6. حاوية شعار السينما (مربعة بزوايا دائرية لتناسب الشعارات) */
    .logo-preview-container {
        border: 3px solid #e50914;
        padding: 5px;
        border-radius: 15px;
        display: inline-block;
        overflow: hidden;
        background: #2b2b2b;
    }

    .text-muted {
        color: #aaa !important;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="glass-card">

                <div class="mb-5 text-center">
                    <h2 class="display-header">Register New <span class="text-red-highlight">Cinema</span></h2>
                    <p class="text-muted">Add a new location to our premier movie circuit</p>
                </div>

                <form asp-controller="Cinemas" asp-action="SaveCreate" method="post" class="row g-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                    <div class="col-md-4 text-center border-end border-secondary border-opacity-25">
                        <div class="logo-preview-container mb-3 shadow-lg">
                            <img id="LogoPreview" src="https://via.placeholder.com/200?text=Cinema+Logo"
                                 style="width: 200px; height: 200px; object-fit: contain;" />
                        </div>
                        <div>
                            <span class="badge bg-dark border border-secondary text-light px-3 py-2">
                                <i class="bi bi-camera me-1"></i> Logo Preview
                            </span>
                        </div>
                    </div>

                    <div class="col-md-8 ps-md-5">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Cinema Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Grand Galaxy Cinema" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Logo" class="form-label fw-bold">Logo URL</label>
                            <input asp-for="Logo" id="LogoInput" class="form-control" placeholder="Paste image link here..." />
                            <span asp-validation-for="Logo" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Facilities, sound system, location details..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex align-items-center justify-content-between pt-3">
                            <a asp-action="Index" class="text-muted text-decoration-none small">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-netflix">
                                <i class="bi bi-building-add me-2"></i> Register Cinema
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // تحديث الشعار عند إدخال الرابط
            $("#LogoInput").on("input", function () {
                var url = $(this).val();
                $("#LogoPreview").attr("src", url || "https://via.placeholder.com/200?text=Cinema+Logo");
            });

            // التعامل مع الروابط الخاطئة
            $("#LogoPreview").on("error", function() {
                $(this).attr("src", "https://via.placeholder.com/200?text=Invalid+Link");
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}