@model Cinema

@{
    ViewData["Title"] = "Cinema Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Segoe UI', sans-serif;
    }

    .glass-card {
        background: #1c1c1c;
        border: 1px solid #333;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        padding: 3rem;
    }

    .display-header {
        font-weight: 800;
        color: #ffffff;
    }

    .text-red-highlight {
        color: #e50914;
    }

    /* تنسيق عرض البيانات للقراءة فقط */
    .detail-box {
        background: #2b2b2b;
        padding: 1.5rem;
        border-radius: 10px;
        border-left: 4px solid #e50914;
    }

    .logo-frame {
        border: 4px solid #fff;
        border-radius: 15px;
        overflow: hidden;
    }

    .btn-outline-netflix {
        border: 1px solid #e50914;
        color: #e50914;
        padding: 10px 20px;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-outline-netflix:hover {
            background: #e50914;
            color: white;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="glass-card">

                <div class="mb-5 text-center">
                    <h2 class="display-header">Cinema <span class="text-red-highlight">Overview</span></h2>
                </div>

                <div class="row g-5">
                    <div class="col-md-4 text-center">
                        <div class="logo-frame shadow-lg">
                            <img src="@Model.Logo"
                                 class="img-fluid"
                                 alt="@Model.Name"
                                 onerror="this.src='https://via.placeholder.com/300?text=No+Logo'" />
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="mb-4">
                            <h4 class="text-muted small text-uppercase">Cinema Name</h4>
                            <h2 class="text-white">@Model.Name</h2>
                        </div>

                        <div class="mb-4">
                            <h4 class="text-muted small text-uppercase">Description</h4>
                            <div class="detail-box">
                                <p class="mb-0">@(string.IsNullOrEmpty(Model.Description) ? "No description provided." : Model.Description)</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center gap-3 pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-list-ul"></i> Back to List
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-netflix">
                                <i class="bi bi-pencil-square"></i> Edit Details
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>