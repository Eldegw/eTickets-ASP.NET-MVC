@model Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Segoe UI', sans-serif;
    }

    .glass-card {
        background: #1c1c1c;
        border: 1px solid #e50914; /* حدود حمراء للتنبيه */
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(229, 9, 20, 0.1);
        padding: 3rem;
    }

    .display-header {
        font-weight: 800;
        color: #ffffff;
    }

    .text-red-highlight {
        color: #e50914;
    }

    /* خانات للقراءة فقط */
    .form-control-plaintext {
        background: #2b2b2b;
        border: 1px solid #444;
        color: #ccc !important;
        border-radius: 8px;
        padding: 12px;
        cursor: not-allowed;
    }

    /* زر الحذف النهائي */
    .btn-delete-confirm {
        background-color: #e50914;
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 5px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-delete-confirm:hover {
            background-color: #b20710;
            box-shadow: 0 0 15px rgba(229, 9, 20, 0.4);
            transform: translateY(-2px);
        }

    .logo-preview-container {
        border: 3px solid #444;
        padding: 5px;
        border-radius: 15px;
        display: inline-block;
        background: #2b2b2b;
        opacity: 0.7; /* إيحاء بأن العنصر سيتم حذفه */
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="glass-card">

                <div class="mb-5 text-center">
                    <h2 class="display-header">Delete <span class="text-red-highlight">Cinema</span></h2>
                    <p class="text-danger fw-bold">Are you sure you want to permanently remove this cinema?</p>
                </div>

                <div class="row g-4">
                    <div class="col-md-4 text-center border-end border-secondary border-opacity-25">
                        <div class="logo-preview-container mb-3 shadow-lg">
                            <img src="@Model.Logo"
                                 style="width: 200px; height: 200px; object-fit: contain;"
                                 onerror="this.src='https://via.placeholder.com/200?text=No+Image'" />
                        </div>
                        <div>
                            <span class="badge bg-danger px-3 py-2">
                                <i class="bi bi-exclamation-triangle me-1"></i> Removal Target
                            </span>
                        </div>
                    </div>

                    <div class="col-md-8 ps-md-5">
                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Cinema Name</label>
                            <div class="form-control-plaintext">@Model.Name</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Description</label>
                            <div class="form-control-plaintext" style="min-height: 100px;">@Model.Description</div>
                        </div>

                        <div class="d-flex align-items-center justify-content-between pt-3">
                            <a asp-action="Index" class="text-muted text-decoration-none small">
                                <i class="bi bi-arrow-left"></i> No, Keep It
                            </a>

                            @* الفورم الفعلي للحذف *@
                            <form asp-controller="Cinemas" asp-action="ConfirmDelete" method="post">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-delete-confirm">
                                    <i class="bi bi-trash3 me-2"></i> Yes, Delete Permanently
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>